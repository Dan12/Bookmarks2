<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Edit User</h1>
    <form action="/users/<%= @user.id %>/update">
      <div class="form-group">
        <label for="user" class="control-label">Name</label>
        <input type="text" name="name" class="form-control" id="idea" placeholder="Average Joe" value="<%= @user.name %>">
      </div>
      <div class="form-group">
        <label for="user" class="control-label">Email</label>
        <input type="text" name="email" class="form-control" id="idea" placeholder="example@sample.com" value="<%= @user.email %>">
      </div>
      <input type="submit" class="btn btn-primary">
    </form>
  </div>
</div>