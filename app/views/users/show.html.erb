<div class="row">
  <div class="col-md-12">
    <h1><%= @user.name %></h1>
    <h3><%= @user.email %></h3>
  </div>
  <div class="col-md-12">
    <h2>Bookmarks</h2>
    <p><a href="/new_bookmark/<%= @user.id %>">Add a New Bookmark</a></p>
    <ul>
      <%@bookmarks.each do |bookmark|%>
      <li><a href="/bookmarks/<%=bookmark.id%>"><%=bookmark.name%></a></li>
      <%end%>
    </ul>
  </div>
  <div class="col-md-12">
    <a href="/users/<%= @user.id %>/edit">Edit</a> |
    <a href="/users/<%= @user.id %>/destroy">Destroy</a>
  </div>
</div>
