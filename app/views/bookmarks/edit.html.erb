<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Edit Bookmark</h1>
    <form action="/bookmarks/<%= @bookmark.id %>/update">
      <div class="form-group">
        <label for="bookmark" class="control-label">Name</label>
        <input type="text" name="name" class="form-control" placeholder="name" value="<%= @bookmark.name  %>">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">Url</label>
        <input type="text" name="url" class="form-control" placeholder="http://" value="<%= @bookmark.url  %>">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">Description</label>
        <input type="text" name="description" class="form-control" placeholder="description" value="<%= @bookmark.description  %>">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">User Id</label>
        <input type="text" name="user_id" class="form-control" placeholder="1" value="<%= @bookmark.user_id  %>">
      </div>
      <input type="submit" class="btn btn-primary">
    </form>
  </div>
</div>