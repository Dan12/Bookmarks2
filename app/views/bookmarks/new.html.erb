<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>New Bookmark</h1>
    <form action="/create_bookmark">
      <div class="form-group">
        <label for="bookmark" class="control-label">Name</label>
        <input type="text" name="name" class="form-control" placeholder="name">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">Url</label>
        <input type="text" name="url" class="form-control" placeholder="http://">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">Description</label>
        <input type="text" name="description" class="form-control" placeholder="description">
      </div>
      <div class="form-group">
        <label for="bookmark" class="control-label">User Id</label>
        <input type="text" name="user_id" class="form-control" placeholder="1" value="<%=@userId%>">
      </div>
      <input type="submit" class="btn btn-primary">
    </form>
  </div>
</div>

